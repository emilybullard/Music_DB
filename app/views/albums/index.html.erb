<p id="notice"><%= notice %></p>

<div class="container">
  <div class="panel panel-default">
    <div class="panel-heading">A L B U M S</div>
      <table class="table">
        <thead>
          <tr>
            <th>A L B U M C O V E R</th>
            <th>A R T I S T</th>
            <th>T I T L E</th>
            <th>G E N R E</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @albums.each do |album| %>
            <tr>
              <td><%= image_tag(album.cover_url, width: 200) if album.cover.present? %></td>
              <td><%= album.artist.name %></td>
              <td><%= album.title %></td>
              <td><%= album.genre.name %></td>
              <td><%= link_to 'Show', album %></td>
              <td><%= link_to 'Edit', edit_album_path(album) %></td>
              <td><%= link_to 'Destroy', album, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>

<br>



<%= link_to 'New Album', new_album_path %>

<%= will_paginate @albums, renderer: BootstrapPagination::Rails %>
