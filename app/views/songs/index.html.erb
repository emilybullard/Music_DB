<h1>Search:</h1>

<div>
  <%= form_tag("/songs", method: "get") do %>
  <%= label_tag(:query, "Song:") %>
  <%= text_field_tag(:query) %>
  <%= submit_tag("Find By Song") %>
  <% end %>
</div>


<p id="notice"><%= notice %></p>

<div class="container">
  <div class="panel panel-default">
    <div class="panel-heading">S O N G S</div>
      <table class="table">
        <thead>
          <tr>
            <th>N A M E</th>
            <th>G E N R E</th>
            <th>A R T I S T</th>
            <th>A L B U M</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @songs.each do |song| %>
            <tr>
              <td><%= song.name %></td>
              <td><%= song.genre.name %></td>
              <td><%= song.artist.name %></td>
              <td><%= song.album.title %></td>
              <td><%= link_to 'Show', song %></td>
              <td><%= link_to 'Edit', edit_song_path(song) %></td>
              <td><%= link_to 'Destroy', song, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>

<br>

<%= link_to 'New Song', new_song_path %>

<%= will_paginate @songs, renderer:BootstrapPagination::Rails %>
